<% @result.categories(params[:student_attributes]).each_with_index do |category, i| %>
  <div class="card card-primary">
    <div class="card-header">
      <h5 class="card-title"><%= category[:title] %></h5>
    </div>
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <tr>
          <th class="col-sm-6 text-center">
            <%= category[:title] %>
          </th>
          <th class="col-sm-3 text-center">
            <%= t("views.analysis.correct_ratios") %>
          </th>
          <th class="col-sm-3 text-center">
            <%= t("views.analysis.correct_ratios") %>
            (<%= t("views.comparator") %>)
          </th>
        </tr>
        <% category[:values].each do |key, value| %>
          <tr>
            <td><%= key %></td>
            <td align="right"><%= sprintf("%.2f", value.to_f) %> %</td>
            <td align="right">
              <%= @survey.aggregated["categories"]["#{@result.grade}-#{@result.subject}-#{params[:comparator]}"][i]["values"][key] %> %
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
